@model WebMVC.Models.Giftcard.GiftcardCreateViewModel

<form asp-controller="Giftcard" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValidFrom" class="form-label"></label>
        <input asp-for="ValidFrom" class="form-control" type="date" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ValidTo" class="form-label"></label>
        <input asp-for="ValidTo" class="form-control" type="date" />
        <span asp-validation-for="ValidTo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumberOfCodes" class="form-label"></label>
        <input asp-for="NumberOfCodes" class="form-control" type="number" min="1" />
        <span asp-validation-for="NumberOfCodes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Giftcard" asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
