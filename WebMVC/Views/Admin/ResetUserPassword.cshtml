@model WebMVC.Models.Admin.AdminResetPasswordViewModel

<h2>Reset user password</h2>

<div class="text-danger" asp-validation-summary="All"></div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="ResetUserPassword" method="get" class="mb-4">
    <div class="input-group">
        <input name="query"
               value="@Model.Query"
               class="form-control"
               placeholder="Search by email or username..." />
        <button class="btn btn-outline-primary" type="submit">Search</button>
    </div>

    @if (Model.Results != null && Model.Results.Any())
    {
        <div class="mt-3">
            <label class="form-label">Results</label>

            <select class="form-select"
                    onchange="location.href='@Url.Action("ResetUserPassword","Admin")?query=@(Model.Query)&selectedUserId=' + encodeURIComponent(this.value)">
                <option value="">-- select user --</option>

                @foreach (var u in Model.Results)
                {
                    <option value="@u.Id" selected="@(u.Id == Model.SelectedUserId)">
                        @(u.UserName) — @(u.Email)
                    </option>
                }
            </select>
        </div>
    }
</form>

<form asp-action="ResetUserPassword" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Query" />
    <input type="hidden" asp-for="SelectedUserId" />

    <div class="mb-3">
        <label class="form-label">Selected user</label>
        <input class="form-control"
               value="@(Model.SelectedUserName) — @(Model.SelectedEmail)"
               readonly />
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit"
            class="btn btn-danger"
            @(string.IsNullOrWhiteSpace(Model.SelectedUserId) ? "disabled" : "")>
        Reset password
    </button>
</form>
