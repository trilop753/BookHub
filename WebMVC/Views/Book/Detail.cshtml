@using WebMVC.Models.Book
@model BookDetailViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.CoverImageUrl" class="img-fluid rounded" alt="@Model.Title Cover" style="width:400px; height:600px; object-fit:cover;" />
        </div>

        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Publisher:</strong> @Model.Publisher?.Name</p>
            <p><strong>Author:</strong> @Model.Author?.Name</p>

            <h4>Description</h4>
            <p>@Model.Description</p>

            <h4>Genres</h4>
            <ul>
                @foreach (var genre in Model.Genres)
                {
                    <li>@genre.Name</li>
                }
            </ul>
        </div>
    </div>

    <hr />

    <h3>Reviews</h3>
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@review.User?.Username</h5>
                    <p class="card-text">@review.Body</p>
                    <p class="text-muted">Rating: @review.Stars / 5</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No reviews available.</p>
    }
</div>
