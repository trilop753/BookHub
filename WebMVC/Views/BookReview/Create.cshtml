@using WebMVC.Models.Book
@model BookReviewCreateViewModel

<form asp-controller="BookReview" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="BookId" />
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="Stars" class="form-label">Rating (1-5)</label>
        <input asp-for="Stars" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Body" class="form-label">Review</label>
        <textarea asp-for="Body" class="form-control"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
