@model WebMVC.Models.Cart.CartViewModel

@{
    ViewData["Title"] = "Cart";
}

<h2>Your cart</h2>

@if (Model?.Items == null || !Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <form asp-action="Update" method="post">
        @Html.AntiForgeryToken()

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th> @* remove button column *@
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <img src="@Model.Items[i].Book.CoverImageUrl"
                             alt="failed to load image"
                             style="max-width:100px; max-height:150px; object-fit:cover;" />
                    </td>
                    <td>
                        <a asp-controller="Book"
                           asp-action="Detail"
                           asp-route-id="@Model.Items[i].Book.Id">
                            @Model.Items[i].Book.Title
                        </a>
                    </td>
                    <td>
                        @Model.Items[i].Book.Price.ToString("0.00")
                    </td>
                    <td>
                        <input asp-for="Items[i].Id" type="hidden" />

                        <input asp-for="Items[i].Quantity"
                               type="number"
                               min="0"
                               class="form-control" />

                    </td>
                    <td>
                        @(Model.Items[i].Book.Price * Model.Items[i].Quantity)
                    </td>
                    <td class="text-end">
                        <button type="submit"
                                name="removeId"
                                value="@Model.Items[i].Id"
                                class="btn btn-sm btn-danger"
                                title="Remove from cart">
                            &times;
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">
            Update cart
        </button>
    </form>
    
}

