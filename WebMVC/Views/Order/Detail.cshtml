@using DAL.UtilityModels
@using WebMVC.Models.Order
@model OrderViewModel

<div class="order-details">
    <h2>Order #@Model.Id</h2>
    <p><strong>Date:</strong> @Model.Date.ToString("dd.MM. yyyy")</p>

    <table class="table">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <img src="~/cover-images/@item.Book.CoverImageName"
                             alt="failed to load cover image" />
                    </td>
                    <td>@item.Book.Title</td>
                    <td>@item.Book.AuthorName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Book.Price.ToString("C")</td>
                    <td>@((item.Quantity * item.Book.Price).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Price: @(Model.TotalPrice?.ToString("C") ?? "Error")</h3>
    <h3>Payment Status: @Model.PaymentStatus.ToString()</h3>
    
    @if (Model.PaymentStatus == PaymentStatus.InProgress)
    {
        <form asp-controller="Order" asp-action="PayOrder" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success">
                Pay Order
            </button>
        </form>
    }
</div>
