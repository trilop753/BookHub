@model IEnumerable<WebMVC.Models.Publisher.PublisherViewModel>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @Html.Raw(TempData["ErrorMessage"])
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@{
    ViewData["Title"] = "Publishers";
}

<div class="container mt-4" style="max-width: 600px;">
    <h1 class="display-6 text-center mb-4">Publishers</h1>

    <table class="table table-sm table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th style="width: 1%; white-space: nowrap;">
                Actions
            </th>
        </tr>
        </thead>

        <tbody>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>@publisher.Name</td>

                <td style="width: 1%; white-space: nowrap;">

                    <a asp-controller="Publisher"
                       asp-action="Edit"
                       asp-route-publisherId="@publisher.Id"
                       class="btn btn-sm btn-warning"
                       title="Edit">
                        edit
                    </a>

                    <form asp-controller="Publisher"
                          asp-action="Delete"
                          asp-route-publisherId="@publisher.Id"
                          method="post"
                          onsubmit="return confirm('Are you sure you want to delete this publisher?');"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                title="Delete">
                            delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="d-flex justify-content-end mt-3">
        <a asp-controller="Publisher"
           asp-action="Create"
           class="btn btn-success">
            Create Publisher
        </a>
    </div>
</div>